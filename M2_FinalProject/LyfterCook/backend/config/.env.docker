# Environment variables for Docker-based validation
# Copy to .env or source before running integration tests against Docker

# Flask Configuration
FLASK_ENV=testing
FLASK_DEBUG=True
SECRET_KEY=docker-test-secret-key

# JWT Configuration
JWT_SECRET_KEY=docker-test-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Database Configuration (Docker Postgres on port 5433)
DB_USER=postgres
DB_PASSWORD=testpassword
DB_HOST=localhost
DB_PORT=5433
DB_NAME=lyftercook_docker

# Redis Configuration (Docker Redis on port 6380)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=testredispassword
REDIS_DB=0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Default Admin User (only used in init_db.py)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@lyftercook.com
DEFAULT_ADMIN_PASSWORD=Admin123!@#

# Cloudinary Configuration (not needed for integration tests)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration (disabled for integration tests)
EMAIL_ENABLED=false

# Mailtrap SMTP (not needed for integration tests)
MAILTRAP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USERNAME=
MAILTRAP_PASSWORD=
MAILTRAP_USE_TLS=true

MAILTRAP_FROM_EMAIL=noreply@lyftercook.local
MAILTRAP_FROM_NAME=LyfterCook

# Calendly Configuration (not needed for integration tests)
CALENDLY_API_KEY=
CALENDLY_USER_URI=

# Application URLs
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:5000
